#include <iostream>
using namespace std;
#include <ctime>
#include<cstdlib>

int bubble(int array[],int n);

int bubble(int array[],int n){
        for(int i=0;i<(n-1);i++){
        for(int j=0;j<n-i-1;j++){
            if(array[j]>array[j+1]){
                int swap=array[j];
                array[j]=array[j+1];
                array[j+1]=swap;
            }
        }
    }
    return 0;
}

int main(){
    srand(time(NULL));
    int array[1000],n=100,i,j=0,swap,x=0,k=1;
    for(n=100;n<=1000;n+=100){
        cout<<"scenario:"<<k<<endl;
        for(i=0;i<n;i++){
        x=(rand()%1000000)+1;
        array[i]=x;
        //n=n+100;
        }
        k=k+1;
        bubble(array,n);
    }
    return 0;
}
